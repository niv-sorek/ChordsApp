<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    >

    <ImageView
        android:id="@+id/artist_IMG_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:layout_marginBottom="10px"
        />

    <TextView
        android:id="@+id/artist_TXT_artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artist_IMG_avatar"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="Artist Name"
        android:textSize="35sp" />

    <RatingBar
        android:id="@+id/artist_RATE_rating"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/artist_TXT_artistName"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/artist_RATE_rating"
        android:text="@string/top_songs"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/artist_LST_topSongs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artist_RATE_rating" />
</LinearLayout>